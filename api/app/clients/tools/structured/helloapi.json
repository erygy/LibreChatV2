{
  "openapi": "3.1.0",
  "info": {
    "title": "Hello API",
    "description": "Retourne un message de salutation et met en majuscule",
    "version": "1.0.1"
  },
  "servers": [
    {
      "url": "https://hello-api-production-0c25.up.railway.app"
    }
  ],
  "paths": {
    "/hello": {
      "get": {
        "summary": "sayHello",
        "operationId": "sayHello",
        "responses": {
          "200": {
            "description": "Message de salutation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/uppercase": {
      "post": {
        "summary": "uppercaseText",
        "operationId": "uppercaseText",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": { "type": "string" }
                },
                "required": ["text"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Texte transform√© en majuscules",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
