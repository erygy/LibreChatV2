{
  "openapi": "3.1.0",
  "info": {
    "title": "Hello API",
    "description": "Retourne un message de salutation",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "https://librechat-production-aed8.up.railway.app" }
  ],
  "paths": {
    "/hello": {
      "get": {
        "summary": "sayHello",
        "operationId": "sayHello",
        "responses": {
          "200": {
            "description": "Message de salutation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
